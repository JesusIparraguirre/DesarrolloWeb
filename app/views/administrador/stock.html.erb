<% if user_signed_in? %>
<div class="col-12 bg-light pt-3 pb-3">
<h3 >ACTUALIZACION DE STOCK Y PRECIO</h3>
</div>
<div class="col-12 col-sm-12 col-lg-12 col-xl-12">
    <div class="row">
        <div class="container">
            <div class="col-12 mt-3">
                <table class="table ">
                    <thead>
                    <tr class="cabecera">
                        <th scope="col">Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Stock</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tbody>
            
                        <% @productos.each do |producto| %>
                            <tr>
                                <td>       
                                <%= producto.nombre %>     
                                </td>
                                <td>   
                                <input class="form-control" value=<%= producto.precio %>
                                </td>
                                <td>   
                                <input class="form-control" value=<%= producto.stock %>
                                </td>
                                <td>   
                                <button class="btn btn-secondary">ACTUALIZAR</button>
                                </td>
                            </tr>
                        <% end %>  
                    
                    </tbody>  
                </table>
            </div>


            <div class="row mt-2">
                <div class="col">
                    <button class="btn btn-dark">ACTUALIZAR TODO</button>
                    <%= link_to "<button class='btn btn-light'>REGRESAR</button>".html_safe, 'javascript:history.back()' %>
                </div>
            </div>
        </div>
    </div>
</div>
<% else %>
<h3 >INGRESA SESION CON ROL ADMINISTRADOR</h3>
<a type="button" class="navbar-brand ml-2 mr-3 btn btn-dark text-light" data-toggle="modal" data-target="#admin">INGRESAR</a>
<%= link_to "<button class='form-control btn btn-outline-secondary'>VOLVER</button>".html_safe, root_path %>

<div class="modal fade" id="admin" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="d-flex justify-content-center" style="background-color: #f4f4f4;">
            <h4 class="titulo-login">Iniciar Sesion</h4>
          </div>
          <div class="modal-body">
            <%= form_for(:user, :url => session_path(:user)) do |f| %>
              <label class="mt-0">E-mail</label>
              <%= f.text_field :email, class:"form-control" %>
              <label class="mt-4">Contrase√±a</label>
              <%= f.password_field :password, class:"form-control" %>
              
              <div class="d-flex justify-content-between mt-3">
                <div>
                <%= f.check_box :remember_me %>
                <%= f.label :Recuerdame %>
                </div>
              </div>
              
            </div>
            <div class="modal-footer">
              <%= f.submit 'Iniciar sesion',class:"btn btn-outline-danger" %>
              <button type="button" class="btn btn-outline-dark" data-dismiss="modal">Volver</button>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
<% end %>