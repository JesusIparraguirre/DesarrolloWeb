    <div class="row">
        <div class="container">
            <div class="column mt-2">
                <div class="row mb-2">
                    <div class="col">
                        <label for="">Nombre del producto</label>
                        <input type="text" class="form-control" placeholder="Nombre">
                    </div>
                    <div class="col">
